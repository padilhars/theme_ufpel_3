{{!
    @template theme_ufpel/course_header

    Course header template for UFPel theme.

    Context variables required for this template:
    * showcourseheader - Whether to show the course header
    * imageurl - URL of the course image (optional)
    * coursename - The course full name
    * hasteachers - Whether there are teachers to display
    * teachers - Array of teacher objects with:
        * name - Teacher's full name
        * last - Whether this is the last teacher in the list

    Example context (json):
    {
        "showcourseheader": true,
        "imageurl": "https://example.com/course-image.jpg",
        "coursename": "Introduction to Computer Science",
        "hasteachers": true,
        "teachers": [
            {
                "name": "John Doe",
                "last": false
            },
            {
                "name": "Jane Smith",
                "last": true
            }
        ]
    }
}}
{{#showcourseheader}}
<div class="ufpel-course-header{{#hasoverlay}} has-overlay{{/hasoverlay}}" 
     {{#imageurl}}style="background-image: url('{{imageurl}}');"{{/imageurl}}
     role="banner"
     aria-label="{{#str}}courseheader, theme_ufpel{{/str}}">
    
    {{#hasoverlay}}
    <div class="ufpel-course-header-overlay" aria-hidden="true"></div>
    {{/hasoverlay}}
    
    <div class="ufpel-course-header-content">
        <h1 class="ufpel-course-title">{{coursename}}</h1>
        
        {{#hasteachers}}
        <p class="ufpel-course-teachers">
            {{#teachers}}
                {{name}}{{^last}}, {{/last}}
            {{/teachers}}
        </p>
        {{/hasteachers}}
    </div>
</div>
{{/showcourseheader}}